<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/logologin" />

    <EditText
        android:id="@+id/et_nrp"
        android:hint="NRP"
        android:drawableLeft="@drawable/ic_user_icon"
        android:textColor="#ffffff"
        android:background="#11000000"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/iv_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/et_password"
        android:hint="Password"
        android:drawableLeft="@drawable/ic_user_lock"
        android:textColor="#ffffff"
        android:background="#11000000"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@+id/et_nrp"
        android:layout_alignStart="@+id/et_nrp"
        android:layout_below="@+id/et_nrp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:textColor="#ffffff"
        android:textSize="26sp"
        android:layout_below="@+id/et_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_rectangle_blue"
        android:text="SIGN IN" />

</RelativeLayout>